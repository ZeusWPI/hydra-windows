<prismMvvm:SessionStateAwarePage
    x:Class="Hydra.Views.Activities.ActivitiesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hydra.Views.Resto"
    xmlns:converters="using:Hydra.Converters"
    xmlns:data="using:Hydra.Models.Activities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <prismMvvm:SessionStateAwarePage.Resources>
        <CollectionViewSource x:Name="KonventsCVS" IsSourceGrouped="True" Source="{Binding Konvents}" />
        <CollectionViewSource x:Name="EventDaysCVS" IsSourceGrouped="True" Source="{Binding EventDays}" />

        <converters:DateFormatter x:Key="DateFormatConverter" />
        
        <DataTemplate x:Key="ActivityTemplate" x:DataType="data:Activity">
            <StackPanel>
                <TextBlock Text="{x:Bind Title}" TextWrapping="Wrap" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{x:Bind Start, Converter={StaticResource DateFormatConverter}, ConverterParameter=\{0:HH:mm\}}" />
                    <TextBlock Text="{x:Bind End,   Converter={StaticResource DateFormatConverter}, ConverterParameter=\{0: - HH:mm\}}" />
                </StackPanel>
                <TextBlock Text="{x:Bind Association}" TextWrapping="Wrap" />
            </StackPanel>
        </DataTemplate>
    </prismMvvm:SessionStateAwarePage.Resources>


    <StackPanel Style="{StaticResource HydraRootContainer}" Orientation="Horizontal">

        <ScrollViewer>
            <StackPanel Width="400" Style="{StaticResource HydraStackPanel}">
                <TextBlock Text="Verenigingen" Style="{ThemeResource TitleTextBlockStyle}" />
                <ListView ItemsSource="{x:Bind KonventsCVS.View}" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="data:Association">
                            <TextBlock Text="{x:Bind DisplayName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate x:DataType="data:Konvent">
                                    <TextBlock Text="{x:Bind KonventName}" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                </ListView>
            </StackPanel>
        </ScrollViewer>
        
        <ScrollViewer>
            <StackPanel Width="400" Style="{StaticResource HydraStackPanel}">
                <TextBlock Text="Activiteiten" Style="{ThemeResource TitleTextBlockStyle}" />
                <ListView ItemsSource="{x:Bind EventDaysCVS.View}"
                          SelectionMode="None"
                          ItemTemplate="{StaticResource ActivityTemplate}" >

                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate x:DataType="data:EventDay">
                                    <TextBlock Text="{x:Bind Date, Converter={StaticResource DateFormatConverter}, ConverterParameter=\{0:ddd d MMMM\}}"
                                               Style="{ThemeResource SubtitleTextBlockStyle}"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                </ListView>

            </StackPanel>
        </ScrollViewer>

    </StackPanel>
</prismMvvm:SessionStateAwarePage>
