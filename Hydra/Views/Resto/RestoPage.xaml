<prismMvvm:SessionStateAwarePage
    x:Class="Hydra.Views.Resto.RestoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hydra.Views.Resto"
    xmlns:data="using:Hydra.Models.Resto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <prismMvvm:SessionStateAwarePage.Resources>
        <DataTemplate x:Key="MealTemplate" x:DataType="data:Meal">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{x:Bind Name}" />
                <TextBlock Grid.Column="1" Text="{x:Bind Price}" />
            </Grid>
        </DataTemplate>

        <local:RestoMenuTemplateSelector x:Key="RestoInfoSelector">
            <local:RestoMenuTemplateSelector.DayMenuTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Text="Soep" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <ContentPresenter Grid.Row="1" Padding="15" ContentTemplate="{StaticResource MealTemplate}" Content="{Binding Soup}" />

                        <TextBlock Grid.Row="2" Text="Vlees &amp; Veggie" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <ListView Grid.Row="3" ItemsSource="{Binding Meat}"
                                  ItemTemplate="{StaticResource MealTemplate}"
                                  Style="{StaticResource HydraListViewStatic}"/>

                        <TextBlock Grid.Row="5" Text="Groenten" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <ListView Grid.Row="6"
                                  ItemsSource="{Binding Vegetables}"
                                  Style="{StaticResource HydraListViewStatic}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.DayMenuTemplate>

            <local:RestoMenuTemplateSelector.LoadingTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Style="{ThemeResource TitleTextBlockStyle}"  Text="Laden..." />
                        <ProgressRing IsActive="{Binding Loading}" />
                    </StackPanel>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.LoadingTemplate>

            <local:RestoMenuTemplateSelector.RestoClosedTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Style="{ThemeResource TitleTextBlockStyle}"  Text="GESLOTEN" />
                    </StackPanel>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.RestoClosedTemplate>
        </local:RestoMenuTemplateSelector>


        <DataTemplate x:Key="RestoLegendItemTemplate" x:DataType="data:RestoLegendItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{x:Bind Key}" />
                <TextBlock Grid.Column="1" Text="{x:Bind Value}" TextWrapping="Wrap" />
            </Grid>
        </DataTemplate>
    </prismMvvm:SessionStateAwarePage.Resources>

    <Grid Style="{StaticResource HydraRootContainer}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <Pivot Grid.Column="0"
               ItemsSource="{Binding RestoInfoList}"
               ItemTemplateSelector="{StaticResource RestoInfoSelector}"
               Style="{StaticResource HydraPivot}">
            <Pivot.HeaderTemplate>
                <DataTemplate x:DataType="data:DailyMenu">
                    <ContentControl Content="{x:Bind FormattedDate}" />
                </DataTemplate>
            </Pivot.HeaderTemplate>
        </Pivot>


        <Grid Grid.Column="1" MaxWidth="400" Style="{StaticResource HydraGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Legende" Style="{ThemeResource TitleTextBlockStyle}" />
            <ListView Grid.Row="1"
                      ItemsSource="{Binding Legend}"
                      ItemTemplate="{StaticResource RestoLegendItemTemplate}"
                      Style="{StaticResource HydraListViewStatic}" />
        </Grid>

    </Grid>
</prismMvvm:SessionStateAwarePage>
