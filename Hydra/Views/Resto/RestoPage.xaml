<prismMvvm:SessionStateAwarePage
    x:Class="Hydra.Views.Resto.RestoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hydra.Views.Resto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <prismMvvm:SessionStateAwarePage.Resources>
        <DataTemplate x:Key="MealTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                <TextBlock Grid.Column="1" Text="{Binding Price}"/>
            </Grid>
        </DataTemplate>

        <local:RestoMenuTemplateSelector x:Key="RestoInfoSelector">
            <local:RestoMenuTemplateSelector.DayMenuTemplate>
                <DataTemplate>
                    <StackPanel Style="{StaticResource RestoInfoItem}">
                        <TextBlock Text="Soep" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <ContentPresenter Padding="15" ContentTemplate="{StaticResource MealTemplate}" Content="{Binding Soup}" />

                        <TextBlock Text="Vlees &amp; Veggie" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <ListView ItemsSource="{Binding Meat}" ItemTemplate="{StaticResource MealTemplate}" SelectionMode="None"  Background="White">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Background" Value="White" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>

                        <TextBlock Text="Groenten" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <ListView ItemsSource="{Binding Vegetables}">
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.DayMenuTemplate>

            <local:RestoMenuTemplateSelector.LoadingTemplate>
                <DataTemplate>
                    <StackPanel Style="{StaticResource RestoInfoItem}">
                        <ProgressRing IsActive="{Binding Loading}" />
                    </StackPanel>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.LoadingTemplate>

            <local:RestoMenuTemplateSelector.RestoClosedTemplate>
                <DataTemplate>
                    <StackPanel Style="{StaticResource RestoInfoItem}">
                        <TextBlock Style="{ThemeResource TitleTextBlockStyle}"  Text="GESLOTEN" />
                    </StackPanel>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.RestoClosedTemplate>
        </local:RestoMenuTemplateSelector>
    </prismMvvm:SessionStateAwarePage.Resources>

    <StackPanel Orientation="Horizontal" Style="{StaticResource HydraRootContainer}">
        <Pivot Width="500"
               ItemsSource="{Binding RestoInfoList}"
               ItemTemplateSelector="{StaticResource RestoInfoSelector}"
               Style="{StaticResource HydraItemsControl}">
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding FormattedDate}" />
                </DataTemplate>
            </Pivot.HeaderTemplate>
        </Pivot>


        <StackPanel Orientation="Vertical" Style="{StaticResource HydraPanel}">
            <TextBlock Text="Legende" Style="{ThemeResource TitleTextBlockStyle}" />
            <ListView ItemsSource="{Binding Legend}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Key}" />
                            <TextBlock Text=": " />
                            <TextBlock Text="{Binding Value}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

    </StackPanel>
</prismMvvm:SessionStateAwarePage>
