<prismMvvm:SessionStateAwarePage
    x:Class="Hydra.Views.Resto.RestoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hydra.Views.Resto"
    xmlns:data="using:Hydra.Models.Resto"
    xmlns:converters="using:Hydra.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    xmlns:maps="using:Windows.UI.Xaml.Controls.Maps"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <prismMvvm:SessionStateAwarePage.Resources>
        <converters:DateFormatter x:Key="DateFormatter" />
        <converters:ArrayImploder x:Key="arrayImploder" />
        
        <DataTemplate x:Key="MealTemplate" x:DataType="data:Meal">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{x:Bind Name}" />
                <TextBlock Grid.Column="1" Text="{x:Bind Price}" />
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="SandwichTemplate" x:DataType="data:Sandwich">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{x:Bind Name}" TextWrapping="WrapWholeWords" FontWeight="Bold" />
                <TextBlock Grid.Column="1" Text="{x:Bind Ingredients, Converter={StaticResource arrayImploder}}" TextWrapping="Wrap" />
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="€ " />
                    <TextBlock Text="{x:Bind PriceSmall}" />
                </StackPanel>
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="€ " />
                    <TextBlock Text="{x:Bind PriceMedium}" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <local:RestoMenuTemplateSelector x:Key="RestoInfoSelector">
            <local:RestoMenuTemplateSelector.DayMenuTemplate>
                <DataTemplate x:DataType="data:DailyMenu">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Text="Soep" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <ContentPresenter Grid.Row="1" Padding="5" ContentTemplate="{StaticResource MealTemplate}" Content="{x:Bind Soup}" HorizontalAlignment="Stretch" />

                        <TextBlock Grid.Row="2" Text="Vlees &amp; Veggie" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <ListView Grid.Row="3" ItemsSource="{x:Bind Meat}"
                                  ItemTemplate="{StaticResource MealTemplate}"
                                  Style="{StaticResource HydraListViewStatic}"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />

                        <TextBlock Grid.Row="5" Text="Groenten" Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" />
                        <ListView Grid.Row="6"
                                  ItemsSource="{x:Bind Vegetables}"
                                  Style="{StaticResource HydraListViewStatic}"  HorizontalAlignment="Stretch">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.DayMenuTemplate>

            <local:RestoMenuTemplateSelector.LoadingTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Style="{ThemeResource TitleTextBlockStyle}"  Text="Laden..." />
                        <ProgressRing IsActive="{Binding Loading}" />
                    </StackPanel>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.LoadingTemplate>

            <local:RestoMenuTemplateSelector.RestoClosedTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Style="{ThemeResource TitleTextBlockStyle}"  Text="GESLOTEN" />
                    </StackPanel>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.RestoClosedTemplate>

            <local:RestoMenuTemplateSelector.SandwichMenuTemplate>
                <DataTemplate x:DataType="data:SandwichMenu">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ListView ItemsSource="{x:Bind Sandwiches}" ItemTemplate="{StaticResource SandwichTemplate}"
                                  Style="{StaticResource HydraListViewStatic}" />
                    </Grid>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.SandwichMenuTemplate>

            <local:RestoMenuTemplateSelector.RestoMapTemplate>
                <DataTemplate x:DataType="data:RestoMap">
                    <maps:MapControl
                        Margin="-19,-15"
                        MapServiceToken="d8jmVUfn9j2AvDUkjg4x~Uc_mgbDPMhW1C2cm7reMbg~AuFJC-cJJ0dng3bZlsuKhWxOAXsJsXuC18KtKzIEP8mCQpIarZTs9-BGDNQWaeNG"
                        Center="{x:Bind Center}" ZoomLevel="12">

                        <maps:MapItemsControl ItemsSource="{x:Bind RestoLocations}">
                            <maps:MapItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="data:RestoLocation">
                                    <Button Background="Transparent">
                                        <Image maps:MapControl.Location="{x:Bind Location}"
                                                    Source="ms-appx:///Assets/Icons/Resto-MarkerIcon.png"
                                                    MaxHeight="45" />
                                    </Button>
                                </DataTemplate>
                            </maps:MapItemsControl.ItemTemplate>
                        </maps:MapItemsControl>
                    </maps:MapControl>
                </DataTemplate>
            </local:RestoMenuTemplateSelector.RestoMapTemplate>
        </local:RestoMenuTemplateSelector>

        <local:RestoMenuTemplateSelector x:Key="RestoHeaderSelector">
            <local:RestoMenuTemplateSelector.DayMenuTemplate>
                <DataTemplate x:DataType="data:DailyMenu">
                    <TextBlock Text="{x:Bind Date, Converter={StaticResource DateFormatter}, ConverterParameter=\{0:d/M\}}" />
                </DataTemplate>
            </local:RestoMenuTemplateSelector.DayMenuTemplate>

            <local:RestoMenuTemplateSelector.LoadingTemplate>
                <DataTemplate>
                    <TextBlock Text="Laden..." />
                </DataTemplate>
            </local:RestoMenuTemplateSelector.LoadingTemplate>

            <local:RestoMenuTemplateSelector.RestoClosedTemplate>
                <DataTemplate x:DataType="data:DailyMenu">
                    <TextBlock Text="{x:Bind Date, Converter={StaticResource DateFormatter}, ConverterParameter=\{0:d/M\}}" />
                </DataTemplate>
            </local:RestoMenuTemplateSelector.RestoClosedTemplate>

            <local:RestoMenuTemplateSelector.SandwichMenuTemplate>
                <DataTemplate x:DataType="data:SandwichMenu">
                    <BitmapIcon UriSource="ms-appx:///Assets/Icons/Resto-SandwichIcon.png" MaxHeight="25" />
                </DataTemplate>
            </local:RestoMenuTemplateSelector.SandwichMenuTemplate>

            <local:RestoMenuTemplateSelector.RestoMapTemplate>
                <DataTemplate x:DataType="data:RestoMap">
                    <BitmapIcon UriSource="ms-appx:///Assets/Icons/Resto-MapIcon.png" MaxHeight="25" />
                </DataTemplate>
            </local:RestoMenuTemplateSelector.RestoMapTemplate>
        </local:RestoMenuTemplateSelector>


        <DataTemplate x:Key="RestoLegendItemTemplate" x:DataType="data:RestoLegendItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{x:Bind Key}" />
                <TextBlock Grid.Column="1" Text="{x:Bind Value}" TextWrapping="Wrap" />
            </Grid>
        </DataTemplate>
    </prismMvvm:SessionStateAwarePage.Resources>

    <Grid Style="{StaticResource HydraRootContainer}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Pivot Grid.Column="0"
               ItemsSource="{Binding RestoInfoList}"
               ItemTemplateSelector="{StaticResource RestoInfoSelector}"
               Style="{StaticResource HydraPivot}">
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource RestoHeaderSelector}" />
                </DataTemplate>
            </Pivot.HeaderTemplate>
        </Pivot>


        <Grid Grid.Column="1" Style="{StaticResource HydraGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Legende" Style="{ThemeResource TitleTextBlockStyle}" />
            <ListView Grid.Row="1"
                      ItemsSource="{Binding Legend}"
                      ItemTemplate="{StaticResource RestoLegendItemTemplate}"
                      Style="{StaticResource HydraListViewStatic}" />
        </Grid>

    </Grid>
</prismMvvm:SessionStateAwarePage>
