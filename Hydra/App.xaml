<prismUnity:PrismUnityApplication
    x:Class="Hydra.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hydra"
    xmlns:prismUnity="using:Prism.Unity.Windows"
    RequestedTheme="Light">

    <prismUnity:PrismUnityApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Colors.xaml" />
                <ResourceDictionary Source="Themes/HydraControls.xaml" />
                <ResourceDictionary Source="Themes/Navigation.xaml" />
                <ResourceDictionary Source="Themes/Resto.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </prismUnity:PrismUnityApplication.Resources>

</prismUnity:PrismUnityApplication>
